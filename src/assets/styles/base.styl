// Ignore Bootstrap code block background colors;
// highlight.js takes care of this
pre
  padding: 0
// Allow code blocks to scroll
pre
  overflow-x: auto
  code
    overflow-wrap: normal
    white-space: pre
// Line numbering
pre .line-number
  float: left
  text-align: right
  background-color: #373b41
  color: #969896
// Line number spacing
pre .line-number span
  margin-left: 10px
  display: block
pre .line-number, code.hljs
  padding: 20px 10px 20px 15px
code.hljs
  padding-left: 10px

.guide-img, .guide-video
  border: 1px solid rgba(0, 0, 0, 0.1)
  border-radius: 4px
  margin-left: auto
  margin-right: auto

// Scale images and videos to full page width
.guide-video
  width: 100%
  height: auto
.guide-img
  max-width: 100%
  max-height: auto
.guide-img-holder
  width: 100%
  margin-top: 20px
  margin-bottom: 20px
  text-align: center

.title
  margin-top: 0
